<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.apache.dolphinscheduler.dao.mapper.TaskRemoteHostMapper">
    <sql id="baseSql">
        id, code, name, ip, port, account, password, description, operator, create_time, update_time
    </sql>
    <select id="queryByTaskRemoteHostName" resultType="org.apache.dolphinscheduler.dao.entity.TaskRemoteHost">
        select
        <include refid="baseSql"/>
        from t_ds_task_remote_host
        WHERE name = #{remoteHostName}
    </select>
    <select id="queryAllTaskRemoteHostList" resultType="org.apache.dolphinscheduler.dao.entity.TaskRemoteHost">
        select
        <include refid="baseSql"/>
        from t_ds_task_remote_host
        order by create_time desc
    </select>
    <select id="queryTaskRemoteHostListPaging" resultType="org.apache.dolphinscheduler.dao.entity.TaskRemoteHost">
        select
        <include refid="baseSql"/>
        from t_ds_task_remote_host
        where 1=1
        <if test="searchName!=null and searchName != ''">
            and name like concat('%', #{searchName}, '%')
        </if>
        order by create_time desc
    </select>
    <select id="queryTaskRemoteHostListPagingByIds" resultType="org.apache.dolphinscheduler.dao.entity.TaskRemoteHost">
        select
        <include refid="baseSql"/>
        from t_ds_task_remote_host
        where 1=1
        <if test="ids != null and ids.size() > 0">
            and id  in
            <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
        <if test="searchName!=null and searchName != ''">
            and name like concat('%', #{searchName}, '%')
        </if>
        order by create_time desc
    </select>
    <select id="queryByTaskRemoteHostCode" resultType="org.apache.dolphinscheduler.dao.entity.TaskRemoteHost">
        select
        <include refid="baseSql"/>
        from t_ds_task_remote_host
        where code = #{remoteHostCode}
    </select>
    <delete id="deleteByCode">
        delete from t_ds_task_remote_host where code = #{code}
    </delete>
</mapper>
